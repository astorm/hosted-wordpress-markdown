{
  "manifest_version": 2,

  "name": "Hosted Wordpress Markdown",
  "description": "This extension provides a Markdown editor for blogs hosted on WordPress.com",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },  
  "content_scripts": [
    {
      "matches": ["http://*.wordpress.com/*post.php*"],
      "js": ["Markdown.Converter.js","to-markdown.js","inject.js"]
    }
  ]    
}